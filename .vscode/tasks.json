    "version": "2.0.0",
    "tasks": [
        {
            "label": "go: build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-gcflags=all=-N -l",
                "-o",
                "${fileDirname}/__debug_bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cmd/app"
            },
        },
        {
            "label": "go: build (debug)",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-v",
                "-gcflags=all=-N -l",
                "-o",
                "${workspaceFolder}/__debug_bin",
                "${workspaceFolder}/cmd/app"
            ],
            // "options": {
            //     "cwd": "${workspaceFolder}/cmd/app"
            // },
        }
    ],
}